            </div>
            <div class="form-group">
                <label asp-for="CompletionDate" class="control-label"></label>
                <input asp-for="CompletionDate" class="form-control" />
                <span asp-validation-for="CompletionDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDraft" /> @Html.DisplayNameFor(model => model.IsDraft)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="OrderStatusTypeId" class="control-label"></label>
                <select asp-for="OrderStatusTypeId" class ="form-control" asp-items="ViewBag.OrderStatusTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PaymentId" class="control-label"></label>
                <select asp-for="PaymentId" class ="form-control" asp-items="ViewBag.PaymentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class ="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PromotionalCodeId" class="control-label"></label>
                <select asp-for="PromotionalCodeId" class ="form-control" asp-items="ViewBag.PromotionalCodeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryId" class="control-label"></label>
                <select asp-for="DeliveryId" class ="form-control" asp-items="ViewBag.DeliveryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


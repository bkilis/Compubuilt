@model Compubuilt.ViewModels.NewProductsViewModel

<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4">
                <div class="section-title">
                    <h4>New products</h4>
                </div>
            </div>
            <div class="col-lg-8 col-md-8">
            </div>
        </div>
        <div class="row property__gallery">
        @foreach (var product in Model.ProductList)
        {
                <div class="col-lg-3 col-md-4 col-sm-6 mix">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" data-setbg="@Html.DisplayFor(modelItem => product.ProductPhotoUrl)">
                            <div class="label new">New</div>
                            <ul class="product__hover">
                                <li><a href="@Html.DisplayFor(modelItem => product.ProductPhotoUrl)" class="image-popup"><span class="arrow_expand"></span></a></li>
                                <li><a href="#"><span class="icon_heart_alt"></span></a></li>
                                <li><a href="#"><span class="icon_bag_alt"></span></a></li>
                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6><a asp-controller="Products" asp-action="ProductPage" asp-route-id="@product.ProductId">@Html.DisplayFor(modelItem => product.ProductName)</a></h6>
                            <div class="rating">
                                @Html.DisplayFor(modelItem => product.RatingValue)
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>
                            <div class="product__price">$ @Html.DisplayFor(modelItem => product.Price)</div>
                        </div>
                    </div>
                </div>
        }

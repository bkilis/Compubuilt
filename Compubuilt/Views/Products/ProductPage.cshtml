                        magni lores eos qui ratione voluptatem sequi nesciunt.</p>*@

                        <div class="product__details__button">
                            <form asp-controller="ShoppingCart" asp-action="AddItemToCart" method="Get">
                                <input type="hidden" asp-for="@Model.ProductId" name="id" />
                                <div class="quantity">
                                    <span>Quantity:</span>
                                    <div class="pro-qty">
                                        <input type="text" name="quantity" value="1">
                                    </div>
                                </div>
                                @if (@Model.AddToCartButtonEnabled == "enabled")
                                {
                                    <button type="submit" class="cart-btn" @Model.AddToCartButtonEnabled > <span class="icon_bag_alt"></span> Add to cart </button>
                                }
                                else
                                {
                                    <button type="submit" class="cart-btn" @Model.AddToCartButtonEnabled style="background: #ababab" > <span class="icon_bag_alt"></span> Add to cart </button>
                                }
                                <ul>
@*                                    <li><a href="#"><span class="icon_heart_alt"></span></a></li>

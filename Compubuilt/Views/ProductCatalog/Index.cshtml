                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>
                            <div class="product__price">$ @Html.DisplayFor(modelItem => product.Price)</div>
                        </div>
                    </div>
                </div>
            }

